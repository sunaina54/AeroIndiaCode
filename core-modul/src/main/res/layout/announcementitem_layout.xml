<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:tag="cards main container">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                card_view:cardBackgroundColor="#fff"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="1dp"
                card_view:cardUseCompatPadding="true">

                <RelativeLayout android:id="@+id/lay2"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_10"
                    android:layout_height="wrap_content">
            <TextView android:id="@+id/titleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="fgd dghdgkjghdghdgdhhdhgh "
                android:layout_alignParentLeft="true"/>

                <TextView android:id="@+id/dateLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date/Time : "
                    android:layout_marginTop="@dimen/margin_10dp"

                    android:layout_below="@+id/titleTv"
                    android:layout_alignParentLeft="true"/>
                <TextView android:id="@+id/dateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 NOv 2019 5:00 PM"
                    android:layout_marginTop="@dimen/margin_10dp"

                    android:layout_below="@+id/titleTv"
                    android:layout_toRightOf="@+id/dateLabel"/>
                    <TextView android:id="@+id/venuLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Venue : "
                        android:layout_marginTop="@dimen/margin_10dp"

                        android:layout_below="@+id/dateTv"
                        android:layout_alignParentLeft="true"/>
                    <TextView android:id="@+id/venuTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XYZ"
                        android:layout_marginTop="@dimen/margin_10dp"

                        android:layout_below="@+id/dateTv"
                        android:layout_toRightOf="@+id/venuLabel"/>

            </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>



