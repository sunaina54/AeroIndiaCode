<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/lib/com.aero"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <Button
        android:visibility="gone"
        android:id="@+id/titleButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/font_11"
        android:background="@color/green"
        android:textColor="@color/white"
         />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/margin_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/logoutIV"

            >
            <TextView
                android:visibility="visible"
                android:id="@+id/txt_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:layout_gravity="center"
                android:textSize="@dimen/font_12"
                android:textColor="@color/text_color_main"
                />

            <TextView
                android:visibility="visible"
                android:text="psq"
                android:layout_gravity="right"
                android:id="@+id/txt_toolbar_cmpny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_2"
                android:layout_below="@+id/txt_toolbar_title"
                android:textSize="@dimen/font_12"
                android:textColor="@color/text_color_main"
                />
        </LinearLayout>



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/logout"
            android:layout_centerVertical="true"
            android:id="@+id/logoutIV"
            />



        <TextView
            android:visibility="gone"
            android:id="@+id/txt_toolbar_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_alignParentRight="true"
            android:padding="@dimen/margin_2"
            android:text="psq@gmail.com"
            android:textSize="@dimen/font_12"
            android:textColor="@color/text_color_main"
            />
    </RelativeLayout>

</android.support.v7.widget.Toolbar>

