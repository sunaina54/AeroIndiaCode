<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/header"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">


            <LinearLayout android:id="@+id/ll"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginBottom="@dimen/margin_16"
                    android:orientation="vertical">


                    <EditText
                        android:layout_marginTop="@dimen/margin_5"
                        android:id="@+id/announcementET"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_100"
                        android:layout_marginRight="@dimen/margin_10"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:padding="@dimen/margin_8"
                        android:inputType="textMultiLine"
                        android:maxLength="500"
                        android:textSize="@dimen/font_16"
                        android:imeOptions="actionDone"
                        android:gravity="start"
                        android:textColor="@color/darker_gray"
                        android:focusable="true"
                        android:hint="@string/write_announcement"
                        android:background="@drawable/edittext_white_bg_gray_corner"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_10"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/companyLogoLL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/margin_5"
                            android:paddingRight="@dimen/margin_5"

                            >


                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:scaleType="fitXY"
                                android:src="@drawable/logo_upload1" />

                            <TextView
                                android:id="@+id/initReqBT"
                                android:layout_width="56dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:maxLines="2"
                                android:inputType="textMultiLine"
                                android:text="Upload"
                                android:textAllCaps="false"
                                android:textColor="@color/colorDarkGray"
                                android:textSize="10sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_10"
                            android:layout_marginLeft="@dimen/margin_10">

                            <ImageView
                                android:id="@+id/announcementIV"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:background="@drawable/no_image"
                                android:scaleType="fitXY" />
                        </LinearLayout>




                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                     >

                        <Button

                            android:id="@+id/submitBTN"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="@dimen/margin_10"
                            android:layout_height="@dimen/margin_35"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_marginRight="@dimen/margin_20"
                            android:layout_marginLeft="@dimen/margin_20"
                            android:padding="@dimen/margin_5"
                            android:textSize="@dimen/font_16"
                            android:textColor="@color/white"
                            android:text="@string/publish"
                            android:background="@color/text_color_main"
                            />
                    </RelativeLayout>






                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>


</LinearLayout>


