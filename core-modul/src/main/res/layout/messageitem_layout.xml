<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:tag="cards main container">






            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                card_view:cardBackgroundColor="#fff"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="1dp"
                card_view:cardUseCompatPadding="true">

                <RelativeLayout android:id="@+id/lay2"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_20"
                    android:layout_height="wrap_content">
            <TextView android:id="@+id/companyNmLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company : "
                android:visibility="gone"
                android:layout_alignParentLeft="true"/>
                <TextView android:id="@+id/companyNmTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xyz"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/companyNmLabel"/>

                    <TextView android:id="@+id/dateTimeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 Nov. 2019"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"/>
                <TextView android:id="@+id/purposeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Purpose : "
                    android:layout_marginTop="@dimen/margin_10dp"

                    android:layout_below="@+id/companyNmTv"
                    android:layout_alignParentLeft="true"/>
                <TextView android:id="@+id/purposeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Commercial"
                    android:layout_marginTop="@dimen/margin_10dp"

                    android:layout_below="@+id/companyNmTv"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/purposeLabel"/>

                <TextView android:id="@+id/viewDetailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Detail"
                    android:background="@drawable/white_rounded_shape_button"
android:padding="@dimen/margin_5"

                    android:textColor="@color/themecolor"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:layout_below="@+id/purposeTv"
                    />



            </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>



