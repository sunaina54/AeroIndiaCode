<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_120"
            android:orientation="horizontal"
            android:weightSum="3">
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                card_view:cardCornerRadius="@dimen/margin_5"
                android:layout_margin="@dimen/margin_8"
                >
                <RelativeLayout
                    android:id="@+id/event_relative"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/event_IV"
                        android:layout_width="@dimen/margin_50"
                        android:layout_height="@dimen/margin_50"
                        android:layout_marginTop="@dimen/margin_10"

android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_upcoming_event" />
                    <TextView
                        style="@style/mediumEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/event_IV"
                        android:gravity="center"
                        android:text="@string/events"
                        android:textAlignment="center" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                card_view:cardCornerRadius="@dimen/margin_5"
                android:layout_margin="@dimen/margin_8">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:id="@+id/personalise_IV"
                        android:layout_width="@dimen/margin_50"
                        android:layout_height="@dimen/margin_50"
                        android:layout_marginTop="@dimen/margin_10"

                        android:layout_centerHorizontal="true"                            android:src="@drawable/ic_services" />

                    <TextView
                        style="@style/mediumEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/personalise_IV"
                        android:gravity="center"
                        android:text="@string/services"
                        android:textAlignment="center" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                card_view:cardCornerRadius="@dimen/margin_5"
                android:layout_margin="@dimen/margin_8">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/b2b_IV"
                        android:layout_width="@dimen/margin_50"
                        android:layout_height="@dimen/margin_50"
                        android:layout_marginTop="@dimen/margin_10"

                        android:layout_centerHorizontal="true"                            android:src="@drawable/ic_b2b" />

                    <TextView
                        style="@style/mediumEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/b2b_IV"
                        android:gravity="center"
                        android:text="@string/announcement"
                        android:textAlignment="center" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_120"
            android:weightSum="3"
            android:orientation="horizontal"
            >
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".95"
                card_view:cardCornerRadius="@dimen/margin_5"
                android:layout_margin="@dimen/margin_8"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/exhibitor_IV"
                        android:layout_width="@dimen/margin_50"
                        android:layout_marginTop="@dimen/margin_10"

                        android:layout_centerHorizontal="true"                            android:layout_height="@dimen/margin_50"
                        android:src="@drawable/ic_feedback"
                         />
                    <TextView
                        android:layout_below="@+id/exhibitor_IV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        style="@style/mediumEditText"
                        android:gravity="center"
                        android:text="@string/feedback"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".95"
                card_view:cardCornerRadius="@dimen/margin_5"
                android:layout_margin="@dimen/margin_8">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/nearby_IV"
                        android:layout_width="@dimen/margin_50"
                        android:layout_marginTop="@dimen/margin_10"

                        android:layout_centerHorizontal="true"                            android:layout_height="@dimen/margin_50"
                        android:src="@drawable/ic_where_ami" />
                    <TextView
                        android:layout_below="@+id/nearby_IV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        style="@style/mediumEditText"
                        android:gravity="center"
                        android:text="@string/where_am"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
